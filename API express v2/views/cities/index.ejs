<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>City-app</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body class="container">
  <h1>My cities</h1>
  <ul>
    <% cities.forEach( (city)=> { %>
      <li>
        <%= city.name %>
          <form action="/cities/<%= city.uuid%>/delete" method="POST">
            <a class="btn btn-primary" href="/cities/<%= city.uuid %>">DÃ©tails</a>
            <button class="btn btn-danger">Supprimer</button>
          </form>
      </li>
      <% }); %>
  </ul>
  <!-- views/index.ejs -->
  <form method="post" action="/cities">
    <div class="mb-3">
      <label for="city" class="form-label">City
      </label>
      <input id="city" name="city"
        class="form-control <%= typeof errors !== 'undefined' && errors.length > 0 ? 'is-invalid' : '' %>" type="text"
        value="<%= typeof city !== 'undefined' ? city : '' %>" autofocus>
      <div class="invalid-feedback">
        <% if (typeof errors !=='undefined' && errors.length> 0) { %>
          <%= errors[0].msg %>
            <% } %>
      </div>
    </div>
    <button class="btn btn-primary">Ajouter la ville</button>
  </form>
</body>

</html>